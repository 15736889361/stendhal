<?xml version='1.0'?>
<project name="stendhal" default="compile" basedir=".">
  <property name="version" value="0.00"/>
  <property name="src" value="src"/>
  <property name="maps" value="maps"/>
  <property name="sprites" value="sprites"/>
  <property name="build" value="build"/>
  <property name="lib"  value="lib"/>
  
  <property name="marauroa"  value="${libdir}/marauroa.jar"/>
  <property name="classpath" value="${build};${marauroa}"/>
  
  <property name="server_jarname" value="stendhal-server-${version}.jar"/>
  <property name="client_jarname" value="stendhal-${version}.jar"/>
  <property name="docs" value="javadocs"/>

  <target name="clean">
    <delete dir="${build}"/>
    <delete dir="${lib}"/>
    <delete dir="${docs}"/>
  </target>

  <target name="init">
    <mkdir dir="${build}" />
    <mkdir dir="${lib}" />
    <mkdir dir="${docs}" />
  </target>

  <target name="server_compile" depends="init">
    <delete dir="${build}"/>
    <mkdir dir="${build}"/>

    <copy todir="${build}/games/stendhal/server/maps">
      <fileset dir="${maps}"/>
    </copy>

    <javac srcdir="${src}" destdir="${build}" debug="true" debuglevel="source,lines"
           includes="**/games/**" excludes="**/client/**">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>    
    </javac>
  </target>

  <target name="client_compile" depends="init">
    <delete dir="${build}"/>
    <mkdir dir="${build}"/>

    <copy todir="${build}/sprites">
      <fileset dir="${sprites}"/>
    </copy>

    <javac srcdir="${src}" destdir="${build}" debug="true" debuglevel="source,lines"
           includes="**/games/**" excludes="**/server/**">
      <classpath>
        <pathelement path="${classpath}"/>
      </classpath>    
    </javac>
  </target>

  <target name="compile" depends="client_compile,server_compile"/>

  <target name="server_jar" depends="server_compile">
    <jar jarfile="${lib}/${server_jarname}" basedir="${build}/"/>    
  </target>

  <target name="client_jar" depends="client_compile">
    <jar jarfile="${lib}/${client_jarname}" basedir="${build}/"/>    
  </target>

  <target name="jar" depends="client_jar,server_jar"/>

  <target name="docs" depends="compile">
    <javadoc packagenames="marauroa.*"           
           defaultexcludes="yes"
           destdir="${docs}"
           author="true"
           version="true"
           use="true"
	   classpath="${classpath}"
           windowtitle="Marauroa API Documentation Version: ${version}">
      <fileset dir="${src}">
          <include name="**/*.java"/>
      </fileset>
    </javadoc>
  </target>
