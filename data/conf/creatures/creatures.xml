  <creature name="centaur">
    <type class="mythical_being" subclass="centaur" tileid="mythical_being.png:0"/>
    <description> You see a noble centaur, half man, half horse. He looks capable of great damage but thankfully seems to mean you no harm.</description>
    <attributes>
      <atk value="449"/>
      <def value="76"/>
      <hp value="350"/>
      <speed value="1.0"/>
      <size value="1,1"/>
    </attributes>
    <level value="56"/>
    <experience value="3000"/>
    <!-- once in 2 weeks -->
    <respawn value="4032000"/>
    <!-- uh, should this one be an animal or humanoid? -->
    <corpse name="humanoid"/>
    <drops>
      <item value="money" quantity="[10,100]" probability="70.0"/>
      <item value="greater potion" quantity="[1,4]" probability="30.0"/>
      <item value="wooden spear" quantity="[20,40]" probability="30.0"/>
    </drops>
    <equips>
    </equips>
    <ai>
      <profile name="brave"/>
      <profile name="animal"/>
      <profile name="non offensive"/>
      <profile name="patrolling"/>
      <profile name="rare"/>
    </ai>
  </creature>

  <creature name="black dragon">
    <type class="mythical_animal" subclass="black_dragon" tileid="mythical_animal.png:0"/>
    <description>You see a black dragon. As you see this huge black creature you almost faint! If you concentrate you can feel the deep growling of it in your bones.</description>
    <attributes>
      <atk value="1227"/>
      <def value="127"/>
      <hp value="3300"/>
      <speed value="1.0"/>
      <size value="6,5"/>
    </attributes>
    <level value="200"/>
    <experience value="82000"/>
    <respawn value="24000"/>
    <corpse name="dragon_6x6" width="6" height="6"/>
    <drops>
      <item value="greater potion" quantity="[1,3]" probability="70.0"/>
      <item value="money" quantity="[300,1000]" probability="100.0"/>
      <item value="obsidian" quantity="[1,4]" probability="10.0"/>
      <item value="black armor" quantity="[1,1]" probability="0.0050"/>
      <item value="black dragon cloak" quantity="[1,1]" probability="1.5"/>
    </drops>
    <equips>
      <slot name="rhand" item="golden mace"/>
    </equips>
    <ai>
      <profile name="brave"/>
      <profile name="animal"/>
      <profile name="offensive"/>
      <profile name="heal" params="35,50"/>
      <profile name="patrolling"/>
      <profile name="attack weakest"/>
    </ai>
  </creature>

