</skill>

<!-- Body Training - Increases MAX HP -->
<skill name ="Body_Training">
	<class name = "Warrior" />
	<preparation time="auto" /> 
	<duration time="permanent" />
	<skill_LVL_bonus>
		<LVL value="ALL">
			<bonus hp="${SKILL_LVL}+${SKILL_LVL}*0.2" />
		</LVL>
	</skill_LVL_bonus>
</skill>

