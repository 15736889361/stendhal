  <style id="panelStyle">
    <state>
      <color value="#998032" type="BACKGROUND"/>
      <color value="white" type="FOREGROUND"/>

	  <imagePainter path="panelwood003.jpg" sourceInsets="0 0 0 0" stretch="false"/>
<!--  <painter idref="woodstylepainter"/> -->
    </state>
  </style>

  <bind style="panelStyle" type="REGION" key="Panel"/>


  <style id="textfieldStyle">
    <insets top="2" left="2" bottom="2" right="2"/>
    
    <state>
      <color value="white" type="BACKGROUND"/>
    </state>

