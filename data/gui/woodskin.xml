<synth>

  <!-- Synth look and feel configuration for the Wood GUI style -->

<!--  <object id="woodstylepainter" class="games.stendhal.client.gui.laf.WoodStylePainter"/> -->

  <style id="defaultStyle">
    <!-- Make all the regions opaque-->
    <opaque value="true"/>

    <font name="Dialog" size="12"/>

    <state>
      <!-- Provide default colors -->
<!--  <color value="#998032" type="BACKGROUND"/> -->
      <color value="black" type="FOREGROUND"/>
    </state>
  </style>

  <bind style="defaultStyle" type="REGION" key=".*"/>


  <style id="buttonStyle">
    <!-- Shift the text one pixel when pressed -->
    <property key="Button.textShiftOffset" type="integer" value="1"/>

    <insets top="0" left="0" right="0" bottom="0"/>

    <state>
      <imagePainter method="ButtonBackground" path="panelwood003.jpg" sourceInsets="0 0 0 0" stretch="false"/>
<!--  <imagePainter method="ButtonBorder" path="panelwood003.jpg" sourceInsets="0 0 0 0" stretch="false"/> -->
    </state>

    <state value="PRESSED">
      <imagePainter method="ButtonBackground" path="panelwood003.jpg" sourceInsets="2 2 2 2" stretch="false"/>

<!-- <imagePainter method="ButtonBorder" path="panelwood003.jpg" sourceInsets="2 2 2 2" stretch="false"/>
      <imagePainter method="ButtonBackground" path="panelwood003.jpg" sourceInsets="2 2 2 2" stretch="false"/>
      <imagePainter method="ToggleButtonBackground" path="panelwood003.jpg" sourceInsets="2 2 2 2" stretch="false"/> -->
    </state>
  </style>

  <!-- Bind buttonStyle to all buttons -->
  <bind style="buttonStyle" type="REGION" key=".*button"/> 


  <style id="InternalFrame">
	<state>
	  <imagePainter method="InternalFrameTitlePaneBackground" path="panelwood006.jpg" sourceInsets="0 0 0 0" stretch="false"/>
<!--  <painter method="InternalFrameTitlePaneBackground" idref="woodstylepainter"/> -->
	 </state>
  </style>

  <bind style="InternalFrame" type="name" key="InternalFrame.*"/>

